#include <SFML/Graphics.hpp>

int main()
{
    sf::RenderWindow window(sf::VideoMode(900, 600), " Rectangles ");
    sf::RectangleShape rec1;
    sf::RectangleShape rec2;
    sf::RectangleShape rec3;
    sf::RectangleShape rec4;
    sf::RectangleShape rec5;
    sf::RectangleShape rec6;
    sf::RectangleShape rec7;
    sf::RectangleShape rec8;
    sf::RectangleShape rec9;
    sf::RectangleShape rec10;
    rec1.setSize(sf::Vector2f(80,-40));
    rec1.setOutlineColor(sf::Color::Black);
    rec1.setFillColor(sf::Color::Green);
    rec1.setPosition(0,600);
    rec2.setSize(sf::Vector2f(80,-80));
    rec2.setOutlineColor(sf::Color::Black);
    rec2.setFillColor(sf::Color::Green);
    rec2.setPosition(90,600);
    rec3.setSize(sf::Vector2f(80,-120));
    rec3.setOutlineColor(sf::Color::Black);
    rec3.setFillColor(sf::Color::Green);
    rec3.setPosition(180,600);
    rec4.setSize(sf::Vector2f(80,-160));
    rec4.setOutlineColor(sf::Color::Black);
    rec4.setFillColor(sf::Color::Green);
    rec4.setPosition(270,600);
    rec5.setSize(sf::Vector2f(80,-200));
    rec5.setOutlineColor(sf::Color::Black);
    rec5.setFillColor(sf::Color::Green);
    rec5.setPosition(360,600);
    rec6.setSize(sf::Vector2f(80,-240));
    rec6.setOutlineColor(sf::Color::Black);
    rec6.setFillColor(sf::Color::Green);
    rec6.setPosition(450,600);
    rec7.setSize(sf::Vector2f(80,-280));
    rec7.setOutlineColor(sf::Color::Black);
    rec7.setFillColor(sf::Color::Green);
    rec7.setPosition(540,600);
    rec8.setSize(sf::Vector2f(80,-320));
    rec8.setOutlineColor(sf::Color::Black);
    rec8.setFillColor(sf::Color::Green);
    rec8.setPosition(630,600);
    rec9.setSize(sf::Vector2f(80,-360));
    rec9.setOutlineColor(sf::Color::Black);
    rec9.setFillColor(sf::Color::Green);
    rec9.setPosition(720,600);
    rec10.setSize(sf::Vector2f(80,-400));
    rec10.setOutlineColor(sf::Color::Black);
    rec10.setFillColor(sf::Color::Green);
    rec10.setPosition(810,600);
    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }
        window.clear(sf::Color::White);
        window.draw(rec1);
        window.draw(rec2);
        window.draw(rec3);
        window.draw(rec4);
        window.draw(rec5);
        window.draw(rec6);
        window.draw(rec7);
        window.draw(rec8);
        window.draw(rec9);
        window.draw(rec10);
        window.display();

    }

    return 0;
}
